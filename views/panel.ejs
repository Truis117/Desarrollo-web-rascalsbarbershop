        <script>
            // Funciones b√°sicas para los botones de la tabla
            function confirmAppointment(rowId) {
                const statusElement = document.getElementById('status-' + rowId);
                statusElement.textContent = 'Confirmed';
                statusElement.style.background = '#3498db';
                alert('‚úÖ Appointment ' + rowId + ' confirmed successfully!');
            }

            function completeAppointment(rowId) {
                const statusElement = document.getElementById('status-' + rowId);
                statusElement.textContent = 'Completed';
                statusElement.style.background = '#27ae60';
                alert('‚úì Appointment ' + rowId + ' marked as completed!');
            }

            function cancelAppointment(rowId) {
                if (confirm('Are you sure you want to cancel appointment ' + rowId + '?')) {
                    const statusElement = document.getElementById('status-' + rowId);
                    statusElement.textContent = 'Cancelled';
                    statusElement.style.background = '#95a5a6';
                    alert('‚ùå Appointment ' + rowId + ' cancelled!');
                }
            }
