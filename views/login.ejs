<%- include('partials/head', { title: 'Sign In' }) %>
    <%- include('partials/header') %>

        <main class="container">
            <section class="form-hero">
                <h1>Sign In</h1>
                <p class="form-lead">Enter your credentials to continue</p>
            </section>

            <% if (error) { %>
                <div class="error">
                    <%= error %>
                </div>
                <% } %>

                    <form method="post" action="/login" class="auth-form">
                        <label for="email">Email Address</label>
                        <input id="email" name="email" type="email" placeholder="your@email.com" required />

                        <label for="password">Password</label>
                        <input id="password" name="password" type="password" placeholder="********" required />

                        <button type="submit" class="btn gradient">Sign In</button>
                    </form>

                    <p class="center muted">Don't have an account? <a href="/register">Create one</a></p>

                    <%- include('partials/footer') %>
        </main>